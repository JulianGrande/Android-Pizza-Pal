<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    tools:layout_centerVertical="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="153dp">

            <ImageView
                android:id="@+id/byoLogo"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/byo_pizza" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </RadioGroup>

            <LinearLayout
                android:layout_width="284dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextText2"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="serif-monospace"
                    android:inputType="text"
                    android:text="@string/byo_title"
                    android:textSize="24sp" />

                <Spinner
                    android:id="@+id/sizeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:entries="@array/pizza_sizes" />

                <Spinner
                    android:id="@+id/toppingSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:entries="@array/all_toppings" />

            </LinearLayout>

        </TableRow>

        <Button
            android:id="@+id/button"
            android:layout_width="133dp"
            android:layout_height="48dp"
            android:layout_marginStart="139dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="139dp"
            android:layout_marginBottom="16dp"
            android:text="@string/add_to_order_button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>